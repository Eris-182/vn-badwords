{
  "compilerOptions": {
    "lib": ["ESNext"],
    "types": ["node", "vitest/globals"],
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src", "**.config.ts"]
}
